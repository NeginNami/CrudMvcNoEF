@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Count</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>
                @Model.Rows[i][1]
            </td>
            <td>
                @Model.Rows[i][2]
            </td>
            <td>
                @Model.Rows[i][3]
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {@id= @Model.Rows[i][0] } )
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { @id = @Model.Rows[i][0] })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Add Product","Create")
